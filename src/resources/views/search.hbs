<div class="mt-4">
    <form method="POST">
        <div class="mb-3">
            <label for="search-input" class="form-label">Từ khóa</label>
            <input type="text" name="q" class="form-control" id="search-input" placeholder="Nhập từ khóa">
        </div>

        <div class="mb-3">
            <label for="gender-input" class="form-label">Giới tính</label>
            <select name="gender" class="form-control" id="gender-input" placeholder="Nhập từ khóa">
                <option value="">--Chọn giới tính--</option>
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
            </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>
</div>